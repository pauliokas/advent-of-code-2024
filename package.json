{
  "name": "advent-of-code-2024",
  "type": "module",
  "packageManager": "yarn@4.5.1",
  "scripts": {
    "fetch-day": "plop",
    "lint": "xo",
    "test": "node --import=tsx --test 'src/**/*.test.ts'"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "import/no-anonymous-default-export": "off",
      "unicorn/no-anonymous-default-export": "off"
    },
    "overrides": [
      {
        "files": "**/*.test.ts",
        "rules": {
          "@typescript-eslint/no-floating-promises": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "proseWrap": "always"
  },
  "devDependencies": {
    "@tsconfig/node22": "22",
    "@types/node": "22",
    "@types/xo": "^0",
    "cheerio": "1.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "plop": "4.0.1",
    "prettier": "3.3.3",
    "tsx": "4.19.2",
    "typescript": "5.6.3",
    "xo": "0.59.3"
  },
  "dependencies": {
    "got": "^14.4.4",
    "node-html-markdown": "^1.3.0"
  }
}
